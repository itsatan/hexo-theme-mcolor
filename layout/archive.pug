
include ./_partial/sidebar.pug
#section
    include ./_partial/menu.pug
    #archives
        .archives-list
            .vertical-line
            - let prevYear = -1;
            - let curYear = 0;
            each post in site.posts.sort('date', -1).data
                - prevYear = curYear;
                - curYear = time(post.date, 'YYYY');
                if curYear !== prevYear
                    h2 #{curYear}
                .article-info
                    .title
                        a(href=url_for(post.path)) #{post.title || '无标题'}
                    .date #{time(post.date, 'YYYY-MM-DD')}

