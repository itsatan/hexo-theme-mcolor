#archives {
    width: 100%;
    height: 100%;
    background: white;
    border-radius: $border-radius;
    padding: 20px;

    .archives-list {
        position: relative;

        h2 {
            font-size: 20px;
            margin-left: 20px;
        }

        .vertical-line {
            position: absolute;
            height: 100%;
            border: 1px dashed #f3f3f3;
            top: 0;
            left: 0;
        }

        .article-info {
            position: relative;
            margin-bottom: 15px;
            padding: 7px 0 5px 18px;
            line-height: 1.6;

            &:before {
                position: absolute;
                margin-left: -5px;
                left: 0;
                top: 10px;
                width: 4px;
                height: 4px;
                border-radius: 6px;
                border: 4px solid #2299DD;
                background: #fff;
                box-sizing: content-box;
                opacity: 0.3;
                content: '';
            }

            .title {
                color: #333;
                font-size: 14px;
                display: flex;
                line-height: 16px;
                height: 16px;
                text-overflow: ellipsis;
                overflow: hidden;
            }

            .date {
                padding-top: 5px;
                font-size: 12px;
                color: #999;
            }
        }
    }
}