@import '_variables';

#article {
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: $primary-bg;
    border-radius: $border-radius;
    padding: 0 20px 20px;

    .article-item {
        display: flex;
        justify-content: space-between;
        width: 100%;
        border-bottom: 1px solid #eee;
        padding: 20px 0;

        &:last-child {
            border-bottom: none;
        }

        .article-left {
            .article-title {
                font-weight: 400;
                text-overflow: ellipsis;
                color: #2c2e3b;
                overflow: hidden;
                white-space: nowrap;
            }

            .article-preview {
                display: -webkit-box;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 2;
                text-overflow: ellipsis;
                overflow: hidden;
                font-size: 13px;
                color: $text-secondary-color;
                line-height: 23px;
                margin: 0.7em 0;
            }

            .article-time {
                color: #7a7a7a;
                font-size: 0.8125rem;
                height: 35px;
                display: flex;
                align-items: center;
            }
        }

        .img-wrapper {
            align-self: center;
            width: 200px;
            height: 120px;
            background-size: cover;
            background-position: center;
            border-radius: $border-radius;
            cursor: pointer;
        }

        .is_cover {
            width: 70%;
        }
    }
}