@import '_variables';

#header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    background-color: $primary-bg;
    box-shadow: 0px 5px 40px 0px rgba(17, 58, 93, 0.1);
    z-index: 999;
}

.header {
    height: 100%;
    display: flex;
    align-items: center;

    #logo {
        margin-right: auto;
        a {
            span {
                font-size: 1.2rem;
                font-weight: bold;
            }
        }
    }

    #search-wrap {
        width: 450px;
        height: 36px;
        background: #f3f5f6;
        border-radius: 8px;
        padding-right: 56px;
        margin: 10px;
        box-sizing: border-box;
        position: relative;
        z-index: 1;

        .search-area {
            height: 36px;
            font-size: 14px;
            color: #9199a1;
            padding: 0;
            margin: 0;
            border-radius: 5px 0 0 5px;
            position: relative;
            .search-input {
                height: 36px;
                line-height: 20px;
                padding: 8px 16px;
                font-size: 14px;
                color: #9199a1;
                border-radius: inherit;
                background: #f3f5f6;
                border: 0px;
                &::placeholder {
                    color:#9199a1;
                }
            }
            .dropdown-menu {
                visibility: hidden;
                position: absolute;
                top: 100%;
                left: 0;
                z-index: 1000;
                width: 450px;
                float: left;
                padding: 5px 0;
                margin: 2px 0 0;
                list-style: none;
                font-size: 16px;
                text-align: left;
                background-color: $primary-bg;
                border-radius: $border-radius;
                -webkit-box-shadow: 0 6px 12px rgba(0,0,0,0.175);
                box-shadow: 0 6px 12px rgba(0,0,0,0.175);
                -webkit-background-clip: padding-box;
                background-clip: padding-box;
                .dropdown-menu-title {
                    padding: 3px 10px;
                    font-size: 12px;
                }

                #local-search-result {
                    .search-result-list {
                        > li {
                            padding: 0 10px
                            cursor: pointer;
                            .search-result-title {
                                font-size: 14px;
                                &:hover {
                                    color:$primary-color;
                                }
                            }
                            .search-result {
                                font-size: 12px
                            }
                            &:hover {
                                text-decoration: none;
                                background-color: #f6f8fb;
                            }
                        }
                    }
                }
                .search-response-null {
                    width: 100%;
                    min-height: 60px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    span {
                        font-size: 12px;
                    }
                }
                .hide {
                    display: none;
                }
            }
            .top_ac {
                visibility: visible;
                opacity: 1;
                transition: all .2s;
                top: 100%;
            }
        }

        .search-form-input {
            cursor:pointer;
            position: absolute;
            right: 0;
            top: 0;
            font-size: 24px;
            color: #9199a1;
            line-height: 24px;
            padding: 6px 18px;
            border-radius: 0 5px 5px 0;
            border: 0px;
            background: #f3f5f6;
            .icon-search {
                display: block;
                height: 24px;
                color: #545c63;
                cursor: pointer;
                font-size: 20px;
                font-weight: bold;
                line-height: 24px;
                width: 20px;
            }
        }
    }
}