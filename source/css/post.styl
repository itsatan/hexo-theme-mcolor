@import '_variables';

#post
    padding: 30px 0px 0px;
    background-color: $primary-bg;
    border-radius: 16px;
    #post-header
        padding: 0 30px 15px;
        border-bottom: 2px solid #f4f4f5
        #post-title
            font-size: 24px;
            font-weight: 700;
            padding-bottom: 12px;
        #secondary
            font-size: 14px;
            color: #9195a1;
            padding-bottom: 10px;
            a
                color: #9195a1;
                padding-right: 8px;
            span
                color: #9195a1;
                padding-right: 8px;
        #extra
            color: #9195a1;
            font-size: 14px;
            display: flex;
            justify-content: space-between
            .extra-info
                display: flex;
                gap: 15px;
    #post-abstract
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 15px 0;
        margin-top: 35px;
        background: #f4f4f5;
        p
            width: 1000px;
            margin: 0 auto;
            font-size: 14px;
            color: #3b3948;
            line-height: 1.8;
            letter-spacing: .05em;
            a
                border-bottom: 1px dashed #353b48;
    #post-content
        width: 1000px;
        margin: 0 auto;
        p
            margin: 20px 0;
            color: #3B3948;
        h1,h2,h3,h4,h5,h6
            margin: 20px 0;
        img {
            max-width: 100%;
            border-radius: 5px;
            display: block;
        }

    #post-pager
        width: 1100px;
        height: 120px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between
        align-items: center;